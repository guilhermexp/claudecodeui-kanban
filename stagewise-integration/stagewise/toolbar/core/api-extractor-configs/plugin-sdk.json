{
  "extends": "./base.json",
  "mainEntryPointFilePath": "<projectFolder>/tmp/plugin-sdk/unbundled-types/index.d.ts",
  "dtsRollup": {
    "untrimmedFilePath": "<projectFolder>/tmp/plugin-sdk/index.d.ts"
  },
  "compiler": {
    "overrideTsconfig": {
      "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "paths": {
          "@/*": ["tmp/plugin-sdk/unbundled-types/*"],
          "@stagewise/karton-contract": [
            "tmp/plugin-sdk/dependencies/karton-contract/index.d.ts"
          ]
        }
      },
      "include": [
        "tmp/plugin-sdk/unbundled-types/**/*.dts",
        "tmp/plugin-sdk/dependencies/**/*.d.ts"
      ]
    }
  }
}
