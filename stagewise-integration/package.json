{
  "name": "stagewise-adapter",
  "version": "1.0.0",
  "description": "Adapter server to connect Stagewise toolbar with local CLIs",
  "type": "module",
  "main": "adapter-server.js",
  "scripts": {
    "start": "node adapter-server.js",
    "start:claude": "CLI_TYPE=claude node adapter-server.js",
    "start:codex": "CLI_TYPE=codex node adapter-server.js",
    "dev": "CLI_TYPE=claude nodemon adapter-server.js",
    "serve-toolbar": "npx serve ./stagewise/toolbar/core/dist/toolbar-main -p 5000 --cors"
  },
  "dependencies": {
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "serve": "^14.2.1"
  }
}
