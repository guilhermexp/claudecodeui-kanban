# JWT Secret - Gere uma string aleatória segura
JWT_SECRET=your_jwt_secret_here_change_this

# OpenAI API Key - Para transcrição de voz (opcional)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Configuração de Portas
PORT=7347           # Backend Node.js
VITE_PORT=5892      # Frontend Vite

# Configuração de Host (para acesso em rede)
HOST=localhost      # Mude para 0.0.0.0 para acesso em rede

# Ambiente
NODE_ENV=production

# Configurações de Sessão JWT
JWT_EXPIRES_IN=7d   # Duração do token

# Configurações de Log
LOG_LEVEL=info      # debug | info | warn | error

# Configurações de Database
DB_PATH=./data/claude-ui.db
