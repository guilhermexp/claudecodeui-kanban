{
  "name": "claude-code-ui",
  "version": "1.5.0",
  "description": "A web-based UI for Claude Code CLI",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:network": "node scripts/network-access.js",
    "dev:https": "node scripts/dev-https.js",
    "server": "node --expose-gc --max-old-space-size=2048 server/index.js",
    "client": "vite --host",
    "build": "vite build",
    "start": "npm run build && npm run server",
    "port-status": "node scripts/port-management.js detect",
    "switch-to-prod": "node scripts/port-management.js switch-to-prod",
    "switch-to-dev": "node scripts/port-management.js switch-to-dev",
    "stop-all": "node scripts/port-management.js stop-all",
    "hooks:enable": "node scripts/claude-hooks-cli.js enable",
    "hooks:disable": "node scripts/claude-hooks-cli.js disable",
    "hooks:list": "node scripts/claude-hooks-cli.js list",
    "hooks:status": "node scripts/claude-hooks-cli.js status",
    "hooks:test": "node scripts/claude-hooks-cli.js test",
    "test": "node tests/run-all.js"
  },
  "keywords": [
    "claude",
    "ai",
    "code",
    "ui",
    "assistant"
  ],
  "author": "Claude Code UI Contributors",
  "license": "MIT",
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-markdown": "^6.3.3",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.38.1",
    "@google/generative-ai": "^0.24.1",
    "@tailwindcss/typography": "^0.5.16",
    "@uiw/react-codemirror": "^4.23.13",
    "@xterm/addon-clipboard": "^0.1.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-web-links": "^0.11.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.2.0",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^3.0.0",
    "framer-motion": "^12.23.12",
    "immer": "^10.1.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.515.0",
    "multer": "^2.0.1",
    "node-pty": "^1.0.0",
    "pidusage": "^4.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^3.0.4",
    "react-router-dom": "^6.8.1",
    "react-syntax-highlighter": "^15.6.6",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "ws": "^8.14.2",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.105",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^7.0.4"
  },
  "overrides": {
    "prismjs": "^1.30.0"
  }
}
